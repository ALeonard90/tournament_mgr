<h1>Start new tournament</h1>
<form action="/user" method="post">
  <input type="text" name="name" placeholder="Tournament Name">
  <input type="submit" name="Create Tournament">
</form>

<h1>Current Tournaments</h1>

<ul>
  <%@tournaments.each do |tournament| %>
    <a href="/user/tournament/<%=tournament.id%>"><li><%=tournament.name %></li></a>
  <% end %>
</ul>