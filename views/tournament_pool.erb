<h1><%=@pool.name%></h1>

<h2>Competitors:</h2>
<ul>
  <% @players.each do |player| %>
    <li><%=player.name%></li>
  <% end %>
</ul>

<h2>Bracket:</h2>

<div class="winner">
<% @winner_matches.each do |match| %>
  <h3><%=match.match_type%><%=match.number%></h3>
  <ul>
    <% match.players.each do |player| %>
     <li><%=player.name%></li>
    <% end %>
  </ul>
<% end %>
</div>

<div class="loser">
<% @loser_matches.each do |match| %>
  <h3><%=match.match_type%><%=match.number%></h3>
  <ul>
    <% match.players.each do |player| %>
      <li><%=player.name%></li>
    <% end %>
  </ul>
<% end %>
</div>