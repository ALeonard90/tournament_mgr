<p><%=@player.name.capitalize%></p>
<p><%=@player.gender.capitalize%></p>
<p><%=@player.age%></p>
<p><%=@player.weight%></p>
<p><%=@player.rank.capitalize%></p>


<h2>Edit competitor info:</h2>
<form action="/user/player/<%=@player.id%>" method="post">
  <label>Name: </label>
  <input type="text" name="name" placeholder="Name" value=<%=@player.name%>>
  <label>Gender: </label>
  <select name="gender">
    <%if @player.gender == "male" %>
      <option value="male" selected="selected">Male</option>
      <option value="female">Female</option>
    <%else%>
      <option value="male">Male</option>
      <option value="female" selected="selected">Female</option>
    <%end%>
  </select>
  <label>Age: </label>
  <input type="number" name="age" placeholder="Age" value=<%=@player.age%>>
  <label>Weight: </label>
  <input type="number" name="weight" placeholder="Weight" value=<%=@player.weight%>>
  <label>Rank: </label>
  <%if @player.rank == "novice" %>
    <select name="rank">
      <option value="novice" selected="selected">Novice</option>
      <option value="advanced">Advanced</option>
    </select>
  <%else%>
    <select name="rank">
      <option value="novice">Novice</option>
      <option value="advanced" selected="selected">Advanced</option>
    </select>
  <%end%>    
  <input type="submit">
</form>

<h2>Remove competitor:</h2>
<form action="/user/player/<%=@player.id%>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Player">
</form>
